<UserControl x:Class="GMEPPlumbing.Views.UserInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GMEPPlumbing"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="#FF2D2D30">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Set 1: Low Pressure -->
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               Text="Low Pressure:"
               Foreground="#FFFFFF"
               Margin="0,0,0,5" />
            <TextBox Grid.Row="1" Grid.Column="0"
             Width="150"
             HorizontalAlignment="Left"
             Background="#FF3E3E42"
             Foreground="#FFFFFF"
             Text="{Binding LowPressure, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="1" Grid.Column="1"
               Text="psi"
               Foreground="#FFFFFF"
               Margin="5,0,0,0"
               VerticalAlignment="Center" />

            <!-- Set 2: High Pressure -->
            <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
               Text="High Pressure:"
               Foreground="#FFFFFF"
               Margin="0,10,0,5" />
            <TextBox Grid.Row="3" Grid.Column="0"
             Width="150"
             HorizontalAlignment="Left"
             Background="#FF3E3E42"
             Foreground="#FFFFFF"
             Text="{Binding HighPressure, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="3" Grid.Column="1"
               Text="psi"
               Foreground="#FFFFFF"
               Margin="5,0,0,0"
               VerticalAlignment="Center" />

            <!-- Set 3: System Length -->
            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
               Text="System Length:"
               Foreground="#FFFFFF"
               Margin="0,10,0,5" />
            <TextBox Grid.Row="5" Grid.Column="0"
             Width="150"
             HorizontalAlignment="Left"
             Background="#FF3E3E42"
             Foreground="#FFFFFF"
             Text="{Binding SystemLength, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="5" Grid.Column="1"
               Text="ft"
               Foreground="#FFFFFF"
               Margin="5,0,0,0"
               VerticalAlignment="Center" />

            <!-- Set 4: Fixture Calculation -->
            <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
               Text="Fixture Calculation:"
               Foreground="#FFFFFF"
               Margin="0,10,0,5" />
            <TextBox Grid.Row="7" Grid.Column="0"
             Width="150"
             HorizontalAlignment="Left"
             Background="#FF3E3E42"
             Foreground="#FFFFFF"
             Text="{Binding FixtureCalculation, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="7" Grid.Column="1"
               Text="gpm"
               Foreground="#FFFFFF"
               Margin="5,0,0,0"
               VerticalAlignment="Center" />

            <!-- Set 5: Meter Size -->
            <TextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
               Text="Meter Size:"
               Foreground="#FFFFFF"
               Margin="0,10,0,5" />
            <TextBox Grid.Row="9" Grid.Column="0"
             Width="150"
             HorizontalAlignment="Left"
             Background="#FF3E3E42"
             Foreground="#FFFFFF"
             Text="{Binding MeterSize, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="9" Grid.Column="1"
               Text="in"
               Foreground="#FFFFFF"
               Margin="5,0,0,0"
               VerticalAlignment="Center" />

            <!-- Set 6: Elevation -->
            <TextBlock Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2"
               Text="Elevation:"
               Foreground="#FFFFFF"
               Margin="0,10,0,5" />
            <TextBox Grid.Row="11" Grid.Column="0"
             Width="150"
             HorizontalAlignment="Left"
             Background="#FF3E3E42"
             Foreground="#FFFFFF"
             Text="{Binding Elevation, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="11" Grid.Column="1"
               Text="ft"
               Foreground="#FFFFFF"
               Margin="5,0,0,0"
               VerticalAlignment="Center" />

            <Rectangle Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Height="1" Fill="#FF3E3E42" Margin="0,20,0,20" />

            <!-- Meter Loss Label -->
            <TextBlock Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2"
                       Text="Meter Loss:"
                       Foreground="#FFFFFF"
                       Margin="0,10,0,5" />

            <!-- Meter Loss Value -->
            <TextBlock Grid.Row="14" Grid.Column="0"
                       Text="{Binding MeterLoss, StringFormat={}{0} psi}"
                       Foreground="#FFFFFF"
                       HorizontalAlignment="Left" />

            <!-- Static Loss Label -->
            <TextBlock Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="2"
                       Text="Static Loss:"
                       Foreground="#FFFFFF"
                       Margin="0,10,0,5" />
            <!-- Static Loss Value -->
            <TextBlock Grid.Row="16" Grid.Column="0"
                       Text="{Binding StaticLoss, StringFormat={}{0} psi}"
                       Foreground="#FFFFFF"
                       HorizontalAlignment="Left" />
        </Grid>
    </Grid>
</UserControl>