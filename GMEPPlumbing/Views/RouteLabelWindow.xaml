<Window x:Class="GMEPPlumbing.Views.RouteLabelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMEPPlumbing.Views"
        xmlns:dd="urn:gong-wpf-dragdrop"
        mc:Ignorable="d"
        Title="RouteLabelWindow" Height="450" Width="500">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="LightSlateGray" BorderBrush="Black" BorderThickness="2"  Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Grid>
                <Button Content="Select" Background="LightGray" FontWeight="DemiBold" Click="Select_Click" Width="300" Height="20"  HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Grid>
        </Border>
        <ListBox HorizontalContentAlignment="Stretch" Grid.Row="1" ItemsSource="{Binding RouteInfoBoxGroupBunches}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <ListBox MinHeight="20" Margin="10" ItemsSource="{Binding RouteInfoBoxGroups}" 
                        HorizontalContentAlignment="Stretch" 
                        dd:DragDrop.IsDragSource="True"
                        dd:DragDrop.IsDropTarget="True"
                        dd:DragDrop.DropHandler="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}"
                        DisplayMemberPath="Key">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="4" Padding="4" Background="LightGray" CornerRadius="4">
                                        <StackPanel HorizontalAlignment="Stretch">
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <TextBlock Text="⬆️" FontWeight="Bold" FontSize="30" ToolTip="{Binding RouteType}" VerticalAlignment="Bottom">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RouteType}" Value="Vertical Up">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="⬇️" FontWeight="Bold" FontSize="30" ToolTip="{Binding RouteType}" VerticalAlignment="Bottom">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RouteType}" Value="Vertical Down">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="➡️" FontWeight="Bold" FontSize="30" ToolTip="{Binding RouteType}" VerticalAlignment="Bottom">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RouteType}" Value="Horizontal">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Type}" FontWeight="Bold" Foreground="{Binding SourceColor}" FontSize="20" Margin="5 0 5 0" VerticalAlignment="Bottom"/>
                                                <Button Background="Transparent" Margin="0 5 0 0"
                                                    BorderThickness="0"
                                                    Padding="0"
                                                    Width="20"
                                                    Height="20"
                                                    Cursor="Hand"
                                                    ToolTip="Go to component on CAD"
                                                    Click="GoToLocation_Click"
                                                    CommandParameter="{Binding}">         
                                                    <Image Source="/GMEPPlumbing;component/Images/location-pin.png" Width="20" Height="20" VerticalAlignment="Bottom"/>
                                                </Button>
                                            </StackPanel>
                                            <ComboBox ItemsSource="{Binding Value}" DisplayMemberPath="SegmentLength" SelectedItem="{Binding SelectedRouteInfoBox, Mode=TwoWay}" />
                                            <StackPanel>
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SelectedRouteInfoBox}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                                    <TextBlock Text="Segment Length: " FontWeight="SemiBold"/>
                                                    <TextBlock FontWeight="Bold" Text="{Binding SelectedRouteInfoBox.SegmentLength}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                                    <TextBlock HorizontalAlignment="Center" Text="Pipe Size: " FontWeight="SemiBold" />
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedRouteInfoBox.PipeSize}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                                    <StackPanel.Style>
                                                        <Style TargetType="StackPanel">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding SelectedRouteInfoBox.CFH}" Value="">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </StackPanel.Style>
                                                    <TextBlock HorizontalAlignment="Center" Text="CFH: " FontWeight="SemiBold" />
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedRouteInfoBox.CFH}" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                                    <StackPanel.Style>
                                                        <Style TargetType="StackPanel">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding SelectedRouteInfoBox.LongestRunLength}" Value="">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </StackPanel.Style>
                                                    <TextBlock HorizontalAlignment="Center" Text="Longest Run: " FontWeight="SemiBold"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedRouteInfoBox.LongestRunLength}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <StackPanel Orientation="Vertical" Margin="0 10">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RouteInfoBoxGroups.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button Content="Generate" Click="GenerateLabel_Click" CommandParameter="{Binding}" Background="LightGray" FontWeight="DemiBold" Width="60" Height="50" HorizontalAlignment="Center"/>
                                <TextBox HorizontalAlignment="Center" AcceptsReturn="True" Text="{Binding LabelText}" FontWeight="DemiBold" Width="300" Height="50" VerticalAlignment="Center"/>
                                <Button Content="Place" Click="Place_Click" CommandParameter="{Binding}" Background="LightGray" FontWeight="DemiBold" Width="60" Height="50" HorizontalAlignment="Center">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LabelText}" Value="">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
