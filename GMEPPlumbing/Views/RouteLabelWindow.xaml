<Window x:Class="GMEPPlumbing.Views.RouteLabelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMEPPlumbing.Views"
        mc:Ignorable="d"
        Title="RouteLabelWindow" Height="450" Width="800">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="LightSlateGray" BorderBrush="Black" BorderThickness="2"  Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Grid>
                <Button Content="Select" Background="LightGray" FontWeight="DemiBold" Click="Select_Click" Width="300" Height="20"  HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Grid>
        </Border>
        <ListBox Grid.Row="1" ItemsSource="{Binding RouteInfoBoxGroups}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="4" Padding="4" Background="LightGray" CornerRadius="4">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{Binding Key}" Foreground="DarkSlateBlue"/>
                            <ComboBox ItemsSource="{Binding Value}" DisplayMemberPath="SegmentLength" SelectedItem="{Binding SelectedRouteInfoBox, Mode=TwoWay}" />
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedRouteInfoBox}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock HorizontalAlignment="Center" FontWeight="Bold" Text="{Binding SelectedRouteInfoBox.Type}" Foreground="DarkSlateBlue"/>
                                <TextBlock HorizontalAlignment="Center" FontWeight="Bold" Text="{Binding SelectedRouteInfoBox.SegmentLength}" Foreground="DarkSlateBlue"/>
                                <TextBlock HorizontalAlignment="Center" Text="Pipe Size:" FontWeight="SemiBold" Foreground="Gray" />
                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedRouteInfoBox.PipeSize}" Margin="0,0,0,4"/>
                                <TextBlock HorizontalAlignment="Center" Text="CFH:" FontWeight="SemiBold" Foreground="Gray" />
                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedRouteInfoBox.CFH}" Margin="0,0,0,4"/>
                                <TextBlock HorizontalAlignment="Center" Text="Longest Run:" FontWeight="SemiBold" Foreground="Gray" />
                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedRouteInfoBox.LongestRunLength}" Margin="0,0,0,4"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
