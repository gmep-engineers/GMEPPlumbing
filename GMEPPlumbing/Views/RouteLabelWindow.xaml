<Window x:Class="GMEPPlumbing.Views.RouteLabelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMEPPlumbing.Views"
        mc:Ignorable="d"
        Title="RouteLabelWindow" Height="450" Width="800">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="LightSlateGray" BorderBrush="Black" BorderThickness="2"  Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Grid>
                <Button Content="Select" Background="LightGray" FontWeight="DemiBold" Click="Select_Click" Width="300" Height="20"  HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Grid>
        </Border>
        <ListBox Grid.Row="1" ItemsSource="{Binding SelectedRouteInfoBoxes}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="4" Padding="4" Background="LightGray" CornerRadius="4">
                        <StackPanel>
                            <!-- Display the key -->
                            <TextBlock FontWeight="Bold" Text="{Binding Key}" Foreground="DarkSlateBlue"/>
                            <!-- Inner ListBox for the ObservableCollection -->
                            <ListBox ItemsSource="{Binding Value}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="2" Padding="8" Background="White" CornerRadius="4" BorderBrush="SlateGray" BorderThickness="1">
                                            <StackPanel>
                                                <TextBlock FontWeight="Bold" Text="{Binding Type}" Foreground="DarkSlateBlue"/>
                                                <TextBlock FontWeight="Bold" Text="{Binding SegmentLength}" Foreground="DarkSlateBlue"/>
                                                <TextBlock Text="Pipe Size:" FontWeight="SemiBold" Foreground="Gray" />
                                                <TextBlock Text="{Binding PipeSize}" Margin="0,0,0,4"/>
                                                <TextBlock Text="CFH:" FontWeight="SemiBold" Foreground="Gray" />
                                                <TextBlock Text="{Binding CFH}" Margin="0,0,0,4"/>
                                                <TextBlock Text="Longest Run:" FontWeight="SemiBold" Foreground="Gray" />
                                                <TextBlock Text="{Binding LongestRunLength}" Margin="0,0,0,4"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
