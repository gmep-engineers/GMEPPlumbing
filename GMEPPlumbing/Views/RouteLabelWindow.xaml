<Window x:Class="GMEPPlumbing.Views.RouteLabelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMEPPlumbing.Views"
        mc:Ignorable="d"
        xmlns:rc="clr-namespace:RichCanvas;assembly=RichCanvas"
        Title="RouteLabelWindow" Height="450" Width="800">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <rc:RichCanvas Grid.Row="0" x:Name="DiagramCanvas"
               Background="White"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch" ItemsSource="{Binding RouteInfoBoxes}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Line 
                  Stroke="{Binding Stroke}" 
                  StrokeThickness="{Binding StrokeThickness}"
                  
                  X1="{Binding StartPosition.X}"
                  Y1="{Binding StartPosition.Y}"
                  X2="{Binding EndPosition.X}"
                  Y2="{Binding EndPosition.Y}"
                  />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </rc:RichCanvas>
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Gray" ShowsPreview="True"/>
        <ListBox Grid.Row="2" Margin="10 0 10 0" x:Name="LabelListBox" HorizontalAlignment="Stretch">
          
        </ListBox>
    </Grid>
</Window>
