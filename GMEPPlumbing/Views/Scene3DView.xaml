<UserControl x:Class="GMEPPlumbing.Views.Scene3DView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helix="http://helix-toolkit.org/wpf"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GMEPPlumbing.Views"
             mc:Ignorable="d"
             Height="320">
    <UserControl.Resources>
        <local:InchesToFeetInchesConverter x:Key="InchesToFeetInchesConverter"/>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <helix:HelixViewport3D x:Name="Viewport" Height="200" Margin="0,10,0,0" ShowCoordinateSystem="False" ShowViewCube="False" Background="Black"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Length: " />
            <TextBlock Text="{Binding Length, Converter={StaticResource InchesToFeetInchesConverter}}" Margin="0,0,10,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
