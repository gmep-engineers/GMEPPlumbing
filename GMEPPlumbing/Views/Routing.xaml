<UserControl x:Class="GMEPPlumbing.Views.Routing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GMEPPlumbing.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:InchesToFeetInchesConverter x:Key="InchesToFeetInchesConverter"/>
    </UserControl.Resources>
    <Grid Background="#FF2D2D30">
        <ListBox ItemsSource="{Binding LengthToFixtures}" Margin="10,10,10,10" Background="#FF3E3E42" Foreground="#FFFFFF" BorderBrush="#FF6E6E70" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="Fixture: {0} - Length From Source: {1}">
                                    <Binding Path="Key"/>
                                    <Binding Path="Value" Converter="{StaticResource InchesToFeetInchesConverter}"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
