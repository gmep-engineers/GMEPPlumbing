<UserControl x:Class="GMEPPlumbing.Views.Routing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GMEPPlumbing.Views"
             xmlns:helix="http://helix-toolkit.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:AddOneConverter x:Key="AddOneConverter"/>
        <Style x:Key="RotatedTabHeaderStyle" TargetType="TabItem">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Margin="8,4">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="MinWidth" Value="30"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="#FF2D2D30">
        <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding Views}" HorizontalContentAlignment="Stretch" Margin="10,10,10,10" Background="#FF3E3E42" Foreground="#FFFFFF" BorderBrush="#FF6E6E70" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Height="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=ActualHeight}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition>
                                <RowDefinition.Style>
                                    <Style TargetType="RowDefinition">
                                        <Setter Property="Height" Value="Auto"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCalculatorEnabled}" Value="False">
                                                <Setter Property="Height" Value="0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </RowDefinition.Style>
                            </RowDefinition>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" FontWeight="Bold" Text="{Binding Name}" Margin="0,0,0,5"/>
                        <Expander Grid.Row="1" Header="Water Calculations" IsExpanded="False" Margin="5" Background="#FF4E4E52" Foreground="#FFFFFF" BorderBrush="#FF6E6E70" BorderThickness="1">
                            <Expander.Content>
                                <StackPanel Orientation="Vertical">
                                    <ListBox Background="LightSlateGray" ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontSize="15" FontWeight="Bold" ItemsSource="{Binding Calculators}" HorizontalContentAlignment="Stretch">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Background="White" Margin="0 0 0 20">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <Border Grid.Row="0" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70">
                                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                            <TextBlock Text="Name: " Margin="5,0,0,0"/>
                                                            <TextBox Text="{Binding Value.Description, Mode=TwoWay}" MinWidth="100"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <Border Grid.Row="1" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70">
                                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                            <TextBlock Text="Min Source Pressure: " Margin="5,0,0,0"/>
                                                            <TextBox Text="{Binding Value.MinSourcePressure, Mode=TwoWay}"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <Border Grid.Row="2" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70">
                                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                            <TextBlock Text="System Length: " Margin="5,0,0,0"/>
                                                            <TextBox IsEnabled="False" Text="{Binding Value.SystemLength}"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <Border Grid.Row="3" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70">
                                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                            <TextBlock Text="Developed System Length: " Margin="5,0,0,0"/>
                                                            <TextBox IsEnabled="False" Text="{Binding Value.DevelopedSystemLength}"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <Expander Grid.Row="4" HorizontalAlignment="Stretch" Header="Losses"  IsExpanded="False" Background="#FF4E4E52" Foreground="#FFFFFF" BorderBrush="#FF6E6E70" BorderThickness="1">
                                                        <Expander.Content>
                                                            <DataGrid ItemsSource="{Binding Value.Losses}" ColumnWidth="*" AutoGenerateColumns="False">
                                                                <DataGrid.Columns>
                                                                    <DataGridTextColumn Header="Description" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                                                                    <DataGridTextColumn Header="Value (PSI)" Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                                                                </DataGrid.Columns>
                                                            </DataGrid>
                                                        </Expander.Content>
                                                    </Expander>
                                                    <Expander Grid.Row="5"  HorizontalAlignment="Stretch" Header="Additions" IsExpanded="False" Background="#FF4E4E52" Foreground="#FFFFFF" BorderBrush="#FF6E6E70" BorderThickness="1">
                                                        <Expander.Content>
                                                            <DataGrid ItemsSource="{Binding Value.Additions}" ColumnWidth="*" AutoGenerateColumns="False">
                                                                <DataGrid.Columns>
                                                                    <DataGridTextColumn Header="Description" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                                                                    <DataGridTextColumn Header="Value (PSI)" Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                                                                </DataGrid.Columns>
                                                            </DataGrid>
                                                        </Expander.Content>
                                                    </Expander>
                                                    <Border Grid.Row="6" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70">
                                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                            <TextBlock Text="Pressure Available For Friction: " Margin="5,0,0,0"/>
                                                            <TextBox IsEnabled="False" Text="{Binding Value.AvailableFrictionPressure}"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <Border Grid.Row="7" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70">
                                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                            <TextBlock Text="Average Pressure Drop: " Margin="5,0,0,0"/>
                                                            <TextBox IsEnabled="False" Text="{Binding Value.AveragePressureDrop}"/>
                                                        </StackPanel>
                                                    </Border>
                                              
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <Border HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70" Background="#FF4E4E52">
                                        <Button HorizontalAlignment="Center" Margin="5" Content="Calculate" Command="{Binding CalculateCommand}"/>
                                    </Border>
                                </StackPanel>
                            </Expander.Content>
                        </Expander>
                        <Grid Grid.Row="2">
                            <TabControl TabStripPlacement="Left" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                                <TabItem Header="Main" Style="{StaticResource RotatedTabHeaderStyle}">
                                    <local:Scene3DView DataContext="{Binding Scenes.Item1}" Margin="5"/>
                                </TabItem>
                                <TabItem Header="Fixture Routes" Style="{StaticResource RotatedTabHeaderStyle}">
                                    <TabControl AlternationCount="1000"  ItemsSource="{Binding Scenes.Item2}">
                                        <TabControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="Fixture {0}">
                                                            <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=TabItem}" Path="(ItemsControl.AlternationIndex)" Converter="{StaticResource AddOneConverter}" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </TabControl.ItemTemplate>
                                        <TabControl.ContentTemplate>
                                            <DataTemplate>
                                                <local:Scene3DView Margin="5"/>
                                            </DataTemplate>
                                        </TabControl.ContentTemplate>
                                    </TabControl>
                                </TabItem>
                            </TabControl>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
