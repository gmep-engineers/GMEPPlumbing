<UserControl x:Class="GMEPPlumbing.Views.Routing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GMEPPlumbing.Views"
             xmlns:helix="http://helix-toolkit.org/wpf"
             xmlns:wpfAnimatedGif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:AddOneConverter x:Key="AddOneConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:GPMToFUConverter x:Key="GPMToFUConverter"/>
        <Style x:Key="RotatedTabHeaderStyle" TargetType="TabItem">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Margin="8,4">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="MinWidth" Value="30"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="#FF2D2D30">
        <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding Views}" HorizontalContentAlignment="Stretch" Margin="10,10,10,10" Background="#FF3E3E42" Foreground="#FFFFFF" BorderBrush="#FF6E6E70" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Height="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=ActualHeight}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition>
                                <RowDefinition.Style>
                                    <Style TargetType="RowDefinition">
                                        <Setter Property="Height" Value="*"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCalculatorEnabled}" Value="False">
                                                <Setter Property="Height" Value="0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </RowDefinition.Style>
                            </RowDefinition>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" FontWeight="Bold" Text="{Binding Name}" Margin="0,0,0,5"/>
                        <Expander x:Name="CalcExpander" Grid.Row="1"  Header="Calculations" IsExpanded="False" Margin="5" Background="#FF4E4E52" Foreground="#FFFFFF" BorderBrush="#FF6E6E70" BorderThickness="1" Collapsed="CalcExpander_Collapsed" Expanded="CalcExpander_Expanded">
                            <Expander.Content>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                        <StackPanel Orientation="Vertical">
                                            <ListBox Background="LightSlateGray" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontSize="15" FontWeight="Bold" ItemsSource="{Binding WaterCalculators}" HorizontalContentAlignment="Stretch" PreviewMouseWheel="InnerControl_PreviewMouseWheel">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Background="White" Margin="0 0 0 20">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <Border Grid.Row="0" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70" Background="#FF6E6E70">
                                                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                                    <TextBox Text="{Binding Value.Description, Mode=TwoWay}" MinWidth="100"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Border Grid.Row="1" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70">
                                                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                                    <TextBlock Text="Min Source Pressure: " Margin="5,0,0,0"/>
                                                                    <TextBox Text="{Binding Value.MinSourcePressure, Mode=TwoWay}"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Border Grid.Row="2" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70">
                                                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                                    <TextBlock Text="System Length: " Margin="5,0,0,0"/>
                                                                    <TextBox IsEnabled="False" Text="{Binding Value.SystemLength}"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Border Grid.Row="3" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70">
                                                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                                    <TextBlock Text="Developed System Length: " Margin="5,0,0,0"/>
                                                                    <TextBox IsEnabled="False" Text="{Binding Value.DevelopedSystemLength}"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Expander Grid.Row="4" HorizontalAlignment="Stretch" Header="Losses"  IsExpanded="False" Background="#FF4E4E52" Foreground="#FFFFFF" BorderBrush="#FF6E6E70" BorderThickness="1" Collapsed="CalcExpander_Collapsed" Expanded="CalcExpander_Expanded">
                                                                <Expander.Content>
                                                                    <DataGrid ItemsSource="{Binding Value.Losses}" ColumnWidth="*" AutoGenerateColumns="False">
                                                                        <DataGrid.Columns>
                                                                            <DataGridTextColumn Header="Description" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                                                                            <DataGridTextColumn Header="Value (PSI)" Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                                                                        </DataGrid.Columns>
                                                                    </DataGrid>
                                                                </Expander.Content>
                                                            </Expander>
                                                            <Expander Grid.Row="5"  HorizontalAlignment="Stretch" Header="Additions" IsExpanded="False" Background="#FF4E4E52" Foreground="#FFFFFF" BorderBrush="#FF6E6E70" BorderThickness="1" Collapsed="CalcExpander_Collapsed" Expanded="CalcExpander_Expanded">
                                                                <Expander.Content>
                                                                    <DataGrid ItemsSource="{Binding Value.Additions}" ColumnWidth="*" AutoGenerateColumns="False">
                                                                        <DataGrid.Columns>
                                                                            <DataGridTextColumn Header="Description" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                                                                            <DataGridTextColumn Header="Value (PSI)" Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                                                                        </DataGrid.Columns>
                                                                    </DataGrid>
                                                                </Expander.Content>
                                                            </Expander>
                                                            <Border Grid.Row="6" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70">
                                                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                                    <TextBlock Text="Pressure Available For Friction: " Margin="5,0,0,0"/>
                                                                    <TextBox IsEnabled="False" Text="{Binding Value.AvailableFrictionPressure}"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Border Grid.Row="7" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70">
                                                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 5">
                                                                    <TextBlock Text="Average Pressure Drop: " Margin="5,0,0,0"/>
                                                                    <TextBox IsEnabled="False" Text="{Binding Value.AveragePressureDrop}"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Expander Header="Charts" Background="LightGray" IsExpanded="False" Grid.Row="8" Collapsed="CalcExpander_Collapsed" Expanded="CalcExpander_Expanded">
                                                                <Expander.Content>
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition>
                                                                                <RowDefinition.Style>
                                                                                    <Style TargetType="RowDefinition">
                                                                                        <Setter Property="Height" Value="0"/>
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger Binding="{Binding Value.EnableCopper}" Value="True">
                                                                                                <Setter Property="Height" Value="*"/>
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </RowDefinition.Style>
                                                                            </RowDefinition>
                                                                            <RowDefinition>
                                                                                <RowDefinition.Style>
                                                                                    <Style TargetType="RowDefinition">
                                                                                        <Setter Property="Height" Value="0"/>
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger Binding="{Binding Value.EnablePex}" Value="True">
                                                                                                <Setter Property="Height" Value="*"/>
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </RowDefinition.Style>
                                                                            </RowDefinition>
                                                                            <RowDefinition>
                                                                                <RowDefinition.Style>
                                                                                    <Style TargetType="RowDefinition">
                                                                                        <Setter Property="Height" Value="0"/>
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger Binding="{Binding Value.EnableCPVCSDRII}" Value="True">
                                                                                                <Setter Property="Height" Value="*"/>
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </RowDefinition.Style>
                                                                            </RowDefinition>
                                                                            <RowDefinition>
                                                                                <RowDefinition.Style>
                                                                                    <Style TargetType="RowDefinition">
                                                                                        <Setter Property="Height" Value="0"/>
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger Binding="{Binding Value.EnableCPVCSCH80}" Value="True">
                                                                                                <Setter Property="Height" Value="*"/>
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </RowDefinition.Style>
                                                                            </RowDefinition>
                                                                        </Grid.RowDefinitions>
                                                                        <StackPanel Grid.Row="0" Orientation="Vertical">
                                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                                                                <TextBlock Text="Copper Chart" FontWeight="Bold"/>
                                                                                <Button Background="Transparent"
                                                                                BorderThickness="0"
                                                                                Padding="0"
                                                                                Width="20"
                                                                                Height="20"
                                                                                Margin="5 0 0 0"
                                                                                Cursor="Hand"
                                                                                CommandParameter="{Binding Value.Chart.CopperTypeLChart}"
                                                                                Click="PlaceWaterChart_Click"
                                                                                ToolTip="Place Chart On CAD">
                                                                                <Image Source="/GMEPPlumbing;component/Images/table-icon.png" Width="20" Height="20"/>
                                                                                </Button>
                                                                            </StackPanel>
                                                                            <ComboBox ItemsSource="{Binding Value.Chart.CopperTypeLChart.Options}" SelectedItem="{Binding Value.Chart.CopperTypeLChart.ChosenOption, Mode=TwoWay}">
                                                                                <ComboBox.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <StackPanel>
                                                                                            <TextBlock Text="{Binding PressureLossPer100Ft, StringFormat='Pressure Loss: {0} PSI/100ft'}" HorizontalAlignment="Center"/>
                                                                                        </StackPanel>
                                                                                    </DataTemplate>
                                                                                </ComboBox.ItemTemplate>
                                                                            </ComboBox>
                                                                            <DataGrid 
                                                                            ItemsSource="{Binding Value.Chart.CopperTypeLChart.ChosenOption.Entries}"
                                                                            AutoGenerateColumns="False"
                                                                            CanUserAddRows="False"
                                                                            CanUserDeleteRows="False"
                                                                            HeadersVisibility="Column"
                                                                            Margin="10"
                                                                            GridLinesVisibility="All"
                                                                            RowHeight="30"
                                                                            FontFamily="Consolas"
                                                                            FontSize="16">
                                                                                <DataGrid.Columns>
                                                                                    <DataGridTextColumn Width="*" Header="PIPE SIZE" Binding="{Binding PipeSize}" />
                                                                                    <DataGridTextColumn Width="*" Header="TANK FU" Binding="{Binding ColdGPM, Converter={StaticResource GPMToFUConverter}, ConverterParameter=1}" />
                                                                                    <DataGridTextColumn Width="*" Header="F.V. FU" Binding="{Binding ColdGPM, Converter={StaticResource GPMToFUConverter}, ConverterParameter=2}" />
                                                                                    <DataGridTextColumn Width="*" Header="GPM" Binding="{Binding ColdGPM}" />
                                                                                    <DataGridTextColumn Width="*" Header="TANK FU - HOT" Binding="{Binding HotGPM, Converter={StaticResource GPMToFUConverter}, ConverterParameter=1}" />
                                                                                    <DataGridTextColumn Width="*" Header="GPM - HOT" Binding="{Binding HotGPM}" />
                                                                                </DataGrid.Columns>
                                                                            </DataGrid>
                                                                        </StackPanel>
                                                                        <StackPanel Grid.Row="1"  Orientation="Vertical">
                                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                                                                <TextBlock Text="PEX Chart" FontWeight="Bold"/>
                                                                                <Button Background="Transparent"
                                                                                 BorderThickness="0"
                                                                                 Padding="0"
                                                                                 Width="20"
                                                                                 Height="20"
                                                                                 Margin="5 0 0 0"
                                                                                 Cursor="Hand"
                                                                                 CommandParameter="{Binding Value.Chart.PEXChart}"
                                                                                 Click="PlaceWaterChart_Click"
                                                                                 ToolTip="Place Chart On CAD">
                                                                                    <Image Source="/GMEPPlumbing;component/Images/table-icon.png" Width="20" Height="20"/>
                                                                                </Button>
                                                                            </StackPanel>
                                                                            <ComboBox ItemsSource="{Binding Value.Chart.PEXChart.Options}" SelectedItem="{Binding Value.Chart.PEXChart.ChosenOption, Mode=TwoWay}">
                                                                                <ComboBox.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <TextBlock Text="{Binding PressureLossPer100Ft, StringFormat='Pressure Loss: {0} PSI/100ft'}" HorizontalAlignment="Center"/>
                                                                                    </DataTemplate>
                                                                                </ComboBox.ItemTemplate>
                                                                            </ComboBox>
                                                                            <DataGrid 
                                                                                ItemsSource="{Binding Value.Chart.PEXChart.ChosenOption.Entries}"
                                                                                AutoGenerateColumns="False"
                                                                                CanUserAddRows="False"
                                                                                CanUserDeleteRows="False"
                                                                                HeadersVisibility="Column"
                                                                                Margin="10"
                                                                                GridLinesVisibility="All"
                                                                                RowHeight="30"
                                                                                FontFamily="Consolas"
                                                                                FontSize="16">     
                                                                                <DataGrid.Columns>
                                                                                    <DataGridTextColumn Width="*" Header="PIPE SIZE" Binding="{Binding PipeSize}" />
                                                                                    <DataGridTextColumn Width="*" Header="TANK FU" Binding="{Binding ColdGPM, Converter={StaticResource GPMToFUConverter}, ConverterParameter=1}" />
                                                                                    <DataGridTextColumn Width="*" Header="GPM" Binding="{Binding ColdGPM}" />
                                                                                    <DataGridTextColumn Width="*" Header="TANK FU - HOT" Binding="{Binding HotGPM, Converter={StaticResource GPMToFUConverter}, ConverterParameter=1}" />
                                                                                    <DataGridTextColumn Width="*" Header="GPM - HOT" Binding="{Binding HotGPM}" />
                                                                                </DataGrid.Columns>
                                                                            </DataGrid>
                                                                        </StackPanel>
                                                                        <StackPanel Grid.Row="2" Orientation="Vertical">
                                                                            <TextBlock Text="CPVC SDRII Chart:" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                                                                            <ComboBox ItemsSource="{Binding Value.Chart.CPVCSDRIIChart.Options}" SelectedItem="{Binding Value.Chart.CPVCSDRIIChart.ChosenOption, Mode=TwoWay}">
                                                                                <ComboBox.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <TextBlock Text="{Binding PressureLossPer100Ft, StringFormat='Pressure Loss: {0} PSI/100ft'}" HorizontalAlignment="Center"/>
                                                                                    </DataTemplate>
                                                                                </ComboBox.ItemTemplate>
                                                                            </ComboBox>
                                                                            <DataGrid 
                                                                                ItemsSource="{Binding Value.Chart.CPVCSDRIIChart.ChosenOption.Entries}"
                                                                                AutoGenerateColumns="False"
                                                                                CanUserAddRows="False"
                                                                                CanUserDeleteRows="False"
                                                                                HeadersVisibility="Column"
                                                                                Margin="10"
                                                                                GridLinesVisibility="All"
                                                                                RowHeight="30"
                                                                                FontFamily="Consolas"
                                                                                FontSize="16">      
                                                                                <DataGrid.Columns>
                                                                                    <DataGridTextColumn Width="*" Header="NOMINAL DIAMETER" Binding="{Binding PipeSize}" />
                                                                                    <DataGridTextColumn Width="*" Header="INNER DIAMETER" Binding="{Binding InnerDiameter}" />
                                                                                    <DataGridTextColumn Width="*" Header="TANK FU" Binding="{Binding ColdGPM, Converter={StaticResource GPMToFUConverter}, ConverterParameter=1}" />
                                                                                    <DataGridTextColumn Width="*" Header="GPM" Binding="{Binding ColdGPM}" />
                                                                                    <DataGridTextColumn Width="*" Header="TANK FU - HOT" Binding="{Binding HotGPM, Converter={StaticResource GPMToFUConverter}, ConverterParameter=1}" />
                                                                                    <DataGridTextColumn Width="*" Header="GPM - HOT" Binding="{Binding HotGPM}" />
                                                                                </DataGrid.Columns>
                                                                            </DataGrid>
                                                                        </StackPanel>
                                                                        <StackPanel Grid.Row="3" Orientation="Vertical">
                                                                            <TextBlock Text="CPVC SCH80 Chart:" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                                                                            <ComboBox ItemsSource="{Binding Value.Chart.CPVCSCH80Chart.Options}" SelectedItem="{Binding Value.Chart.CPVCSCH80Chart.ChosenOption, Mode=TwoWay}">
                                                                                <ComboBox.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <TextBlock Text="{Binding PressureLossPer100Ft, StringFormat='Pressure Loss: {0} PSI/100ft'}" HorizontalAlignment="Center"/>
                                                                                    </DataTemplate>
                                                                                </ComboBox.ItemTemplate>
                                                                            </ComboBox>
                                                                            <DataGrid 
                                                                                ItemsSource="{Binding Value.Chart.CPVCSCH80Chart.ChosenOption.Entries}"
                                                                                AutoGenerateColumns="False"
                                                                                CanUserAddRows="False"
                                                                                CanUserDeleteRows="False"
                                                                                HeadersVisibility="Column"
                                                                                Margin="10"
                                                                                GridLinesVisibility="All"
                                                                                RowHeight="30"
                                                                                FontFamily="Consolas"
                                                                                FontSize="16">
                                                                                <DataGrid.Columns>
                                                                                    <DataGridTextColumn Width="*" Header="NOMINAL DIAMETER" Binding="{Binding PipeSize}" />
                                                                                    <DataGridTextColumn Width="*" Header="INNER DIAMETER" Binding="{Binding InnerDiameter}" />
                                                                                    <DataGridTextColumn Width="*" Header="TANK FU" Binding="{Binding ColdGPM, Converter={StaticResource GPMToFUConverter}, ConverterParameter=1}" />
                                                                                    <DataGridTextColumn Width="*" Header="GPM" Binding="{Binding ColdGPM}" />
                                                                                    <DataGridTextColumn Width="*" Header="TANK FU - HOT" Binding="{Binding HotGPM, Converter={StaticResource GPMToFUConverter}, ConverterParameter=1}" />
                                                                                    <DataGridTextColumn Width="*" Header="GPM - HOT" Binding="{Binding HotGPM}" />
                                                                                </DataGrid.Columns>
                                                                            </DataGrid>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Expander.Content>
                                                            </Expander>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                            <ListBox Background="LightSlateGray" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontSize="15" FontWeight="Bold" ItemsSource="{Binding GasCalculators}" HorizontalContentAlignment="Stretch" PreviewMouseWheel="InnerControl_PreviewMouseWheel">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Background="White" Margin="0 0 0 20">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="*"/>
                                                            </Grid.RowDefinitions>
                                                            <Border Grid.Row="0" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70" Background="#FF6E6E70">
                                                                <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Margin="0 5 0 5">
                                                                    <TextBox Text="{Binding Value.Description, Mode=TwoWay}" MinWidth="100"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <TreeView Grid.Row="1" ItemsSource="{Binding Value.MenuItems}">
                                                                <TreeView.ItemTemplate>
                                                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                                                        <Grid Width="300" Margin="0 10 0 0">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="3*" />
                                                                                <ColumnDefinition Width="*" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <TextBlock Grid.Column="0" Text="{Binding Name}" Margin="0 0 10 0" VerticalAlignment="Center"/>
                                                                            <Button Grid.Column="1"
                                                                            Click="Button_Click"
                                                                            Content="Select"
                                                                            Visibility="{Binding HasClicked, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                            HorizontalAlignment="Right"
                                                                            VerticalAlignment="Center"/>
                                                                        </Grid>
                                                                    </HierarchicalDataTemplate>
                                                                </TreeView.ItemTemplate>
                                                            </TreeView>
                                                            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Vertical" Margin="0 5 0 5">
                                                                <TextBlock HorizontalAlignment="Center" Text="{Binding Value.ChosenChart.GasType}" Margin="0,5,0,0"/>
                                                                <TextBlock HorizontalAlignment="Center" Text="{Binding Value.ChosenChart.Name}"/>
                                                            </StackPanel>
                                                            <DataGrid Grid.Row="3" ItemsSource="{Binding ChosenChart.CsvTable.DefaultView}" AutoGenerateColumns="True" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn" DataContext="{Binding Value}" ColumnWidth="*" CanUserAddRows="False" CanUserDeleteRows="False"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </ScrollViewer>
                                    <Border Grid.Row="1" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FF6E6E70" Background="#FF4E4E52">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition>
                                                    <RowDefinition.Style>
                                                        <Style TargetType="RowDefinition">
                                                            <Setter Property="Height" Value="0"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                                    <Setter Property="Height" Value="Auto"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </RowDefinition.Style>
                                                </RowDefinition>
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Margin="5" Content="Save" Command="{Binding SaveCommand}"/>
                                                <Button Margin="5" Content="Calculate" Command="{Binding CalculateCommand}"/>
                                            </StackPanel>
                                            <Viewbox Grid.Row="1" Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Canvas Width="32" Height="32">
                                                    <Ellipse Width="32" Height="32" Stroke="#FF6E6E70" StrokeThickness="4" Opacity="0.3"/>
                                                    <Ellipse Width="32" Height="32" Stroke="#FF6E6E70" StrokeThickness="4">
                                                        <Ellipse.StrokeDashArray>2 6</Ellipse.StrokeDashArray>
                                                        <Ellipse.RenderTransform>
                                                            <RotateTransform x:Name="SpinnerRotate" CenterX="16" CenterY="16"/>
                                                        </Ellipse.RenderTransform>
                                                        <Ellipse.Triggers>
                                                            <EventTrigger RoutedEvent="Loaded">
                                                                <BeginStoryboard>
                                                                    <Storyboard RepeatBehavior="Forever">
                                                                        <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)" From="0" To="360" Duration="0:0:1"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                        </Ellipse.Triggers>
                                                    </Ellipse>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Expander.Content>
                        </Expander>
                        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="LightGray" ShowsPreview="True" Visibility="{Binding IsExpanded, ElementName=CalcExpander, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Grid Grid.Row="3">
                            <TabControl TabStripPlacement="Left" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                                <TabItem Header="Main" Style="{StaticResource RotatedTabHeaderStyle}">
                                    <local:Scene3DView DataContext="{Binding MainScene}" Margin="5"/>
                                </TabItem>
                                <TabItem Header="Fixture Routes" Style="{StaticResource RotatedTabHeaderStyle}">
                                    <TabControl AlternationCount="1000"  ItemsSource="{Binding Scenes}">
                                        <TabControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="Fixture {0}">
                                                            <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=TabItem}" Path="(ItemsControl.AlternationIndex)" Converter="{StaticResource AddOneConverter}" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </TabControl.ItemTemplate>
                                        <TabControl.ContentTemplate>
                                            <DataTemplate>
                                                <local:Scene3DView Margin="5"/>
                                            </DataTemplate>
                                        </TabControl.ContentTemplate>
                                    </TabControl>
                                </TabItem>
                            </TabControl>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
