<Window x:Class="GMEPPlumbing.Views.BasePointPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMEPPlumbing.Views"
        mc:Ignorable="d"
        Title="Base Points"
        Height="310" Width="417">
    <Grid>
        <Border BorderThickness="2" BorderBrush="Black">
            <StackPanel Orientation="Vertical">
                <Label HorizontalAlignment="Center" Content="Plan Name" FontWeight="Bold" Margin="10,0,0,0" FontSize="14"/>
                <TextBox x:Name="PlanNameText" HorizontalAlignment="Center" Width="200" Height="25"/>
                <Label HorizontalAlignment="Center" Content="# Floors" FontWeight="Bold" Margin="10,10,0,0" FontSize="14"/>
                <TextBox x:Name="FloorQtyText" HorizontalAlignment="Center" Width="200" Height="25"/>
                <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" Width="120" Margin="0,20,0,0" Background="#e6ecf2">
                    <CheckBox HorizontalAlignment="Center" x:Name="SiteCheck" Content="Site Basepoints" FontWeight="DemiBold" Margin="0 5 0 5" />
                </Border>

                <Line X1="0" Y1="0" X2="350" Y2="0" Stroke="Black" Margin="0 20 0 0" Height="1" HorizontalAlignment="Center" StrokeThickness="1"/>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 20 0 0">
                    <CheckBox x:Name="WaterCheck" FontWeight="Demibold" Content="COLD/HOT WATER" Margin="1,0,0,20"/>
                    <CheckBox x:Name="SewerVentCheck" FontWeight="Demibold" Content="SEWER/VENT" Margin="10,0,0,20"/>
                    <CheckBox x:Name="GasCheck" FontWeight="Demibold" Content="GAS" Margin="10,0,0,20"/>
                    <!--<CheckBox x:Name="StormCheck" Content="STORM" Margin="10,0,0,20"/>-->
                </StackPanel>

            </StackPanel>
        </Border>
        <Border BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Stretch" Height="40" VerticalAlignment="Bottom" Background="LightSlateGray" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="OK" FontWeight="DemiBold" Width="60" Margin="0,0,10,0" IsDefault="True" Click="Ok_Click"/>
                <Button Content="Cancel" FontWeight="DemiBold" Width="60" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
